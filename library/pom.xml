<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.bsoft</groupId>
        <artifactId>apidemo</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>


    <artifactId>library</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>library</name>
    <description>library</description>
    <packaging>jar</packaging>

    <properties>
        <maven.deploy.skip>false</maven.deploy.skip>
    </properties>

    <build>
        <plugins>
            <!--
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
-->

            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>${openapi-plugin.version}</version>
                <executions>
                    <execution>
                        <!-- ozon api -->
                        <id>generate-openapi-ozon-api</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <!--
                            <inputSpec>https://brk.basisregistraties.overheid.nl/api/bestuurlijke-grenzen/v2</inputSpec>
                            -->
                            <inputSpec>${project.basedir}/src/main/resources/bestuurlijkegrenzenV2.0.1.yaml</inputSpec>

                            <generatorName>spring</generatorName>
                            <library>spring-boot</library>
                            <supportingFilesToGenerate>ApiUtil.java</supportingFilesToGenerate>
                            <configOptions>
                                <apiPackage>nl.bsoft.bestuurlijkegrenzen.generated.api</apiPackage>
                                <basePackage>nl.bsoft.bestuurlijkegrenzen.generated</basePackage>
                                <configPackage>nl.bsoft.bestuurlijkegrenzen.generated.generated.configuration
                                </configPackage>
                                <invokerPackage>nl.bsoft.bestuurlijkegrenzen.generated.invoker</invokerPackage>
                                <modelPackage>nl.bsoft.bestuurlijkegrenzen.generated.model</modelPackage>

                                <dateLibrary>java8</dateLibrary>
                                <delegatePattern>true</delegatePattern>
                                <hideGenerationTimestamp>true</hideGenerationTimestamp>
                                <interfaceOnly>true</interfaceOnly>
                                <requestMappingMode>none</requestMappingMode>
                                <serializationLibrary>jackson</serializationLibrary>
                                <skipDefaultInterface>true</skipDefaultInterface>
                                <useBeanValidation>false</useBeanValidation>
                                <useJakartaEe>true</useJakartaEe>
                                <useSpringBoot3>true</useSpringBoot3>
                                <validateSpec>true</validateSpec>
                            </configOptions>
                            <schemaMappings>
                                <!--
                                <schemaMapping>GeoJsonGeometry=org.wololo.geojson.GeoJSON</schemaMapping>
                                -->
                                <schemaMapping>GeoJSONGeometry=org.wololo.geojson.GeoJSON</schemaMapping>
                                <schemaMapping>Point=org.wololo.geojson.Point</schemaMapping>
                                <schemaMapping>MultiPoint=org.wololo.geojson.MultiPoint</schemaMapping>
                                <schemaMapping>LineString=org.wololo.geojson.LineString</schemaMapping>
                                <schemaMapping>MultiLineString=org.wololo.geojson.MultiLineString</schemaMapping>
                                <schemaMapping>Polygon=org.wololo.geojson.Polygon</schemaMapping>
                                <schemaMapping>MultiPolygon=org.wololo.geojson.MultiPolygon</schemaMapping>
                                <schemaMapping>GeometryCollection=org.wololo.geojson.GeometryCollection</schemaMapping>
                                <schemaMapping>Health=org.springframework.boot.actuate.health.Status</schemaMapping>
                                <schemaMapping>Info=Object</schemaMapping>
                            </schemaMappings>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.3</version>
                <configuration>
                    <basedir>
                        ${project.build.directory}/generated-sources/openapi/src/main/java/nl/bsoft/bestuurlijkegrenzen/generated/model
                    </basedir>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                    <replacements>
                        <replacement>
                            <token>ObjectTypeEnum objectType</token>
                            <value>String objectType</value>
                        </replacement>
                        <replacement>
                            <token>ObjectTypeEnum getObjectType</token>
                            <value>String getObjectType</value>
                        </replacement>
                    </replacements>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <includes>
                        <include>${project.build.directory}/generated-sources/openapi</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
